# Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# LOCAL DEVELOPMENT
# ===========================================

# Supabase (for local development, use local Supabase instance)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Backend API URL (local FastAPI)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Internal service URLs (for API routes - Docker network)
ORCHESTRATOR_URL=http://localhost:8002

# ===========================================
# VERCEL PRODUCTION DEPLOYMENT
# ===========================================
# Uncomment and configure these for Vercel deployment

# Supabase Production (cloud instance)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# App URL (your Vercel domain)
# NEXT_PUBLIC_APP_URL=https://rkj.ai

# Backend API URL (VPS with Traefik)
# NEXT_PUBLIC_API_URL=https://api.rkj.ai

# NOTE: ORCHESTRATOR_URL is not needed on Vercel
# The frontend calls the API which handles orchestration internally
