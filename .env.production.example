# ===========================================
# Meeting Assistant - Production Environment
# ===========================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control
# ===========================================

# -------------------------------------------
# Supabase (Cloud)
# -------------------------------------------
# Get these from: https://supabase.com/dashboard/project/{your-project}/settings/api
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Frontend public URLs (used by browser - must be accessible externally)
NEXT_PUBLIC_SUPABASE_URL=https://xxxx.supabase.co
NEXT_PUBLIC_APP_URL=https://your-domain.com

# -------------------------------------------
# Cloudflare R2 Storage
# -------------------------------------------
# Get these from: https://dash.cloudflare.com > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=meeting-assistant
R2_PUBLIC_URL=https://pub-xxxx.r2.dev

# -------------------------------------------
# OpenAI API
# -------------------------------------------
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxx
OPENAI_WHISPER_MODEL=whisper-1

# -------------------------------------------
# Google OAuth (for Calendar Sync)
# -------------------------------------------
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=xxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxx

# -------------------------------------------
# Bot Configuration
# -------------------------------------------
BOT_DISPLAY_NAME=Meeting Assistant Bot ðŸ¤–
BOT_JOIN_BEFORE_MINUTES=2
BOT_MAX_DURATION_HOURS=4
BOT_IMAGE=rkj-meet-bot:latest

# -------------------------------------------
# Internal Services URLs (Docker network)
# -------------------------------------------
# These are used for inter-service communication within the Docker network
# Change ONLY if you have custom container names or external services

REDIS_INTERNAL_URL=redis://redis:6379
ORCHESTRATOR_INTERNAL_URL=http://bot-orchestrator:8002

# -------------------------------------------
# Docker Configuration
# -------------------------------------------
DOCKER_NETWORK=rkj-ai-network
RECORDINGS_VOLUME=docker_recordings

# -------------------------------------------
# Container Names (optional - for custom naming)
# -------------------------------------------
# Uncomment and modify if needed for your Easypanel/hosting setup
# REDIS_CONTAINER_NAME=rkj-redis
# WEB_CONTAINER_NAME=rkj-web
# API_CONTAINER_NAME=rkj-api
# SCHEDULER_CONTAINER_NAME=rkj-scheduler
# ORCHESTRATOR_CONTAINER_NAME=rkj-bot-orchestrator
# TRANSCRIPTION_CONTAINER_NAME=rkj-transcription-worker

# -------------------------------------------
# Service Ports (optional - for custom ports)
# -------------------------------------------
# Uncomment and modify if needed
# WEB_PORT=3000
# API_PORT=8000
# ORCHESTRATOR_PORT=8002

# -------------------------------------------
# Logging
# -------------------------------------------
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
